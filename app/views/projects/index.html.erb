<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: black;
        color: white;
        font-weight: bold;
    }
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
      background-color: black;
      color: white;
    }
</style>

<h1>Projects</h1>

<table class="table table-hover">

  <thead>
    <tr>
      <th>Project Number</th>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
        <tr> 
        <td><%= project.pnum %></td>
        <td><%= project.pstdate%></td>
        <td><%= project.penddate%></td>
        </tr>
    <% end %>
  </tbody>

</table>