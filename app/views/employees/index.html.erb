<style>
  table {
    width: 100%;
    border-collapse: collapse;
}
th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}
th {
    background-color: black;
    color: white;
    font-weight: bold;
}
tr:nth-child(even) {
    background-color: #f2f2f2;
}

thead th {
    background-color: #333; 
    color: #fff;
    padding: 8pxl;
    text-align: left;
    border-bottom: 2px solid #ddd;
}

thead th a {
    color: inherit; 
    text-decoration: none;
}

thead th a:hover {
color: inherit; 
text-decoration: underline; 
}

</style>
<h1>Employees</h1>

<table id='employee-table'>

  <thead>
    <tr>
    <th><%= link_to "Last Name", :sort => "lname"%> </th>
    <th><%= link_to "First Name", :sort => "fname"%> </th>
    <th><%= link_to "Social Security", :sort => "ssn"%> </th>
    <th><%= link_to "Salary", :sort => "salary"%> </th>
  </tr>
  </thead>

  <tbody id='data'>
    <% @employees.each do |employee| %>
    <tr> 
      <td><%= employee.lname %></td>
      <td><%= employee.fname %></td>
      <td><%= employee.ssn%></td>
      <td>$<%= employee.salary%></td>
    </tr>
    <% end %>
  </tbody>

</table>





