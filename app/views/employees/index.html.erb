<h1>Employees</h1>

<table id='employee-table'>

  <thead>
    <tr>
    <th><%= link_to "Last Name", :sort => "lname"%> </th>
    <th><%= link_to "First Name", :sort => "fname"%> </th>
    <th><%= link_to "Social Security", :sort => "ssn"%> </th>
    <th><%= link_to "Salary", :sort => "salary"%> </th>
  </tr>
  </thead>

  <tbody id='data'>
    <% @employees.each do |employee| %>
    <tr> 
      <td><%= employee.lname %></td>
      <td><%= employee.fname %></td>
      <td><%= employee.ssn%></td>
      <td>$<%= employee.salary%></td>
    </tr>
    <% end %>
  </tbody>

</table>





